<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/dialog_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_white_rect"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/dialog_defult_text_color"
            android:textSize="@dimen/dialog_text_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dialog_linesize"
            android:background="@color/line_big_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/phone_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/dialog_cancel"
                android:textColor="@color/dialog_button_color" />

            <View
                android:layout_width="@dimen/dialog_linesize"
                android:layout_height="fill_parent"
                android:background="@color/line_big_color" />

            <Button
                android:id="@+id/phone_ok"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/dialog_tell_phone"
                android:textColor="@color/dialog_button_color" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>