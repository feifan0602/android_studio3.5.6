<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/title"
            layout="@layout/activity_title" />

        <View style="@style/setting_line_style_m" />

        <RelativeLayout
            style="@style/setting_item"
            android:layout_marginTop="@dimen/activity_content_top" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_message_text" />

            <CheckBox
                style="@style/setting_item_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/setting_line_style" />

        <RelativeLayout style="@style/setting_item" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_voice" />

            <CheckBox
                style="@style/setting_item_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/setting_line_style" />

        <RelativeLayout style="@style/setting_item" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_telephone_receiver" />

            <CheckBox
                android:id="@+id/speakvioce"
                style="@style/setting_item_checkbox"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View style="@style/setting_line_style_m" />

        <RelativeLayout
            android:id="@+id/setting_product"
            style="@style/setting_item"
            android:layout_marginTop="10dp" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_abstract" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sh_icon_next" />
        </RelativeLayout>

        <View style="@style/setting_line_style" />

        <RelativeLayout
            android:id="@+id/setting_clean"
            style="@style/setting_item" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_cancel" />

            <TextView
                android:id="@+id/cache_size"
                style="@style/setting_item_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="15.0M" />
        </RelativeLayout>

        <View style="@style/setting_line_style" />

        <RelativeLayout
            android:id="@+id/setting_updter_layout"
            style="@style/setting_item" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_updater" />
        </RelativeLayout>

        <View style="@style/setting_line_style" />

        <RelativeLayout
            android:id="@+id/setting_comment"
            style="@style/setting_item" >

            <TextView
                style="@style/setting_item_text"
                android:text="@string/setting_comment" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sh_icon_next" />
        </RelativeLayout>

        <View style="@style/setting_line_style_m" />
    </LinearLayout>

    <Button
        android:id="@+id/setting_exit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/event_button_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/orange_3.1_color"
        android:text="@string/setting_exit"
        android:textColor="@color/white_color"
        android:textSize="@dimen/reserve_text_size" />

</RelativeLayout>