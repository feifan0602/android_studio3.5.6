<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@color/text_color_ff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <LinearLayout
            android:id="@+id/item_toplayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/white_color"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:background="@color/white_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="打开古典音乐之门"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_26px" />

                <TextView
                    android:id="@+id/item_sub"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:background="@color/white_color"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="萌娃最爱  绘画"
                    android:textColor="@color/text_color_a1"
                    android:textSize="@dimen/text_size_26px" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:background="@color/white_color"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="2015-9-27"
                        android:textColor="@color/text_color_26"
                        android:textSize="@dimen/text_size_26px" />

                    <TextView
                        android:id="@+id/item_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:background="@color/white_color"
                        android:gravity="center_vertical|right"
                        android:text="免费"
                        android:textColor="@color/text_color_26"
                        android:textSize="@dimen/text_size_26px" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_mapaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:paddingTop="10dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sh_icon_event_list_location" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:drawablePadding="5dp"
                        android:text="时间: "
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/item_content_size" />

                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2015-9-27"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="地点: 上海市浦东新区人民广场"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/item_content_size"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white_color"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:drawablePadding="5dp"
                        android:text="费用: "
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/item_content_size" />

                    <TextView
                        android:id="@+id/item_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        android:text="免费"
                        android:textColor="@color/orange_3.1_color"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_tiketcount_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="剩余票数: "
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/item_content_size" />

                    <TextView
                        android:id="@+id/item_tiketcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white_color"
                        android:gravity="center_vertical"
                        android:text="2"
                        android:textColor="@color/orange_3.1_color"
                        android:textSize="@dimen/item_content_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_reserver_rect_bg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="5dp"
                    android:text="预订"
                    android:textColor="@color/white_color" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/sh_icon_event_list_new_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/footview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text=""
        android:visibility="gone" />

</LinearLayout>