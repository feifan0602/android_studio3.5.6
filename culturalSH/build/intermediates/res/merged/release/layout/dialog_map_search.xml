<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_map_search_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_map_search_img_top"
        android:layout_width="@dimen/map_activity_w"
        android:layout_height="@dimen/map_activity_h"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="@dimen/map_activity_line"
        android:layout_height="2dp"
        android:background="@color/orange_color"></View>

    <RelativeLayout
        android:layout_width="@dimen/map_activity_w"
        android:layout_height="@dimen/map_activity_w_h"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="@dimen/map_activity_w"
            android:layout_height="@dimen/map_activity_h"
            android:background="@drawable/sh_icon_mapbg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="上场上场上场上场"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/details_title_size" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/sh_icon_map_address"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="地点: 上海徐家汇藏书阁"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/details_text_size" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/sh_icon_map_time"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="时间: 2016-1-9至2016-1-9"
                    android:maxLength="22"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/details_text_size" />

                <TextView
                    android:id="@+id/vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/sh_icon_map_oerv"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="余票: 100000"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/details_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/sh_icon_next"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="查看"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/item_content_size" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sh_icon_mapforword" />
    </RelativeLayout>

</LinearLayout>