<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/activity_comment_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:drawableLeft="@drawable/wff_comment"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="评论"
        android:textColor="@color/text_color_26"
        android:textSize="@dimen/text_size_28px" />

    <View style="@style/venue_line" />

    <ImageView
        android:id="@+id/activity_comment_zan_iv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:padding="10dp"
        android:src="@drawable/wff_zan" />

    <View style="@style/venue_line" />

    <ImageView
        android:id="@+id/collect"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:padding="10dp"
        android:src="@drawable/wff_collection" />

    <View style="@style/venue_line" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:padding="11dp"
        android:src="@drawable/wff_share" />

    <LinearLayout
        android:id="@+id/Kill_ll"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight=".4"
        android:background="@color/text_color_72"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/OnResh_ib"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".3"
            android:background="@null"
            android:src="@drawable/renovate"
            android:visibility="gone" />

        <TextView
            android:id="@+id/venue_profile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:text="咨询"
            android:textColor="@color/text_color_ff"
            android:textSize="@dimen/text_size_40px" />
    </LinearLayout>

    <com.sun3d.culturalShanghai.view.CustomDigitalClock
        android:id="@+id/venue_clock"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight=".4"
        android:background="@color/text_color_72"
        android:gravity="center"
        android:textColor="@color/text_color_ff"
        android:textSize="@dimen/text_size_40px"
        android:visibility="gone" />

</LinearLayout>