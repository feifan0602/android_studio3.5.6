<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/total_banner_china_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_color_33"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你当前的位置在"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_26px"/>

            <TextView
                android:id="@+id/top_banner_address_china_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国馆"
                android:textColor="@color/text_color_ffb"
                android:textSize="@dimen/text_size_26px"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",点击"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_26px"/>

            <Button
                android:id="@+id/change_china_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/home_pop_noradiu_gray"
                android:text="切换城市"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_26px"/>
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.sun3d.culturalShanghai.view.SlideShowView
            android:id="@+id/slideshowView"
            android:layout_width="fill_parent"
            android:layout_height="120dp">
        </com.sun3d.culturalShanghai.view.SlideShowView>

        <LinearLayout
            android:id="@+id/total_banner_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/text_color_33"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你当前的位置在"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_26px"/>

                <TextView
                    android:id="@+id/top_banner_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海站"
                    android:textColor="@color/text_color_ffb"
                    android:textSize="@dimen/text_size_26px"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=",点击"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_26px"/>

                <Button
                    android:id="@+id/change_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/home_pop_noradiu_gray"
                    android:text="切换城市"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/closetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="5"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_26px"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒后关闭"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_26px"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white_color">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/myView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <com.sun3d.culturalShanghai.view.ScrollLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/Scroll_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp">
                </com.sun3d.culturalShanghai.view.ScrollLayout>

                <com.sun3d.culturalShanghai.view.PageControlView
                    android:id="@+id/pageControl"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>