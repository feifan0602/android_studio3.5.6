<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:id="@+id/textView1_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/vote_show_img"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/vote_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="1223"
                android:textColor="@color/red_color"
                android:textSize="@dimen/details_text_size" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/vote_num"
                android:text="人已参与投票"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/details_text_size" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/vote_num"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="目前第一名"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/details_text_size"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:text=""
                android:textColor="@color/red_color"
                android:textSize="@dimen/details_text_size"
                android:layout_toLeftOf="@+id/textView1"
                android:layout_toStartOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_orge_rect"
                android:drawableLeft="@drawable/sh_icon_hear"
                android:drawablePadding="10dp"
                android:padding="7dp"
                android:text="我要投票"
                android:textColor="@color/white_color"
                android:textSize="@dimen/details_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>