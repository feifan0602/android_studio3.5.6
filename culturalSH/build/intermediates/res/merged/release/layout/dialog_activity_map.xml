<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_activity_map"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/white_color"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/dialog_activity_map_img"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_activity_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="上海市人民广场"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_activity_map_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="2dp"
            android:text="上海市人民广场吃炸鸡"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_activity_map_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="2dp"
            android:text="2016-11-16至2016-11-16"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_activity_map_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="余票： 99张"
            android:textColor="@color/black_color"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>