<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:gravity="bottom" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_white_rect"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <SeekBar
            android:id="@+id/music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:max="100"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_color_style"
            android:thumb="@drawable/sh_icon_null"
            android:thumbOffset="0dip" />

        <TextView
            android:id="@+id/textshow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="false"
            android:background="@drawable/sh_icon_mucisthumbbg"
            android:gravity="center_vertical|center_horizontal"
            android:text="00:00"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/main_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/music_paly"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sh_icon_play" />

</RelativeLayout>