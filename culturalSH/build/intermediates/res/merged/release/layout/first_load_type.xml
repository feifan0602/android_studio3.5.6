<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/love_return"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/love_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/home_all_select"
            android:text="全选"
            android:textColor="@color/text_color_66"
            android:textSize="@dimen/text_size_26px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/first_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="请选择你喜欢的主题"
        android:textColor="@color/text_color_26"
        android:textSize="@dimen/text_size_34px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/text_color_cc" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/activity_bg_color"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/first_type_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="8dp"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:scrollbars="none" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="90dp" >

        <Button
            android:id="@+id/first_start"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/home_myborder"
            android:text="确  定"
            android:textColor="@color/text_color_72"
            android:textSize="@dimen/text_size_34px" />
    </RelativeLayout>

</LinearLayout>