<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/sex_return"
        android:layout_width="@dimen/activity_title_height"
        android:layout_height="@dimen/activity_title_height"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/sh_icon_personal_return" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:text="@string/dialog_edit_sex"
        android:textColor="@color/dialog_title_color"
        android:textSize="@dimen/dialog_text_size" />

    <RadioGroup
        android:id="@+id/sex_radiogroup_sex"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_white_rect"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/sex_man"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/dialog_personality_man"
            android:textColor="@color/color_text_white"
            android:background="@drawable/select_dialog_org_left"
            android:textSize="@dimen/dialog_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/personal_item_line_color" />

        <RadioButton
            android:id="@+id/sex_woman"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/dialog_personality_woman"
            android:background="@drawable/select_dialog_org_right"
            android:textColor="@color/color_text_white"
            android:textSize="@dimen/dialog_text_size" />
    </RadioGroup>

</LinearLayout>