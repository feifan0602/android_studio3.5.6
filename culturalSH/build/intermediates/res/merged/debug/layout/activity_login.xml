<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_ff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/top_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/third_fastlogin_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:padding="13dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/middle_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:text="文化云"
            android:textColor="@color/text_color_ff"
            android:textSize="@dimen/text_size_44px" />

        <TextView
            android:id="@+id/fastlogin_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/text_color_ff"
            android:textSize="@dimen/text_size_30px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_ff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/left_tv"
            style="@style/Wff_login_left_tv"
            android:text="手机号码" />

        <EditText
            android:id="@+id/fastlogin_input_account"
            style="@style/wff_fastlogin_input_style"
            android:hint="@string/reserve_phone_hint"
            android:inputType="number"
            android:maxLength="11" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_df" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_ff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/left_tv1"
            style="@style/Wff_login_left_tv"
            android:text="@string/wff_password" />

        <EditText
            android:id="@+id/fastlogin_input_password"
            style="@style/wff_fastlogin_input_style"
            android:hint="@string/wff_reserve_password_hint"
            android:inputType="textPassword"
            android:maxLength="12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_df" />

    <TextView
        android:id="@+id/fastlogin_forgotpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:text="@string/dialog_fastlogin_forgotpw"
        android:textColor="@color/text_color_72"
        android:textSize="@dimen/text_size_26px" />

    <Button
        android:id="@+id/fastlogin_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_input_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_bt"
        android:text="@string/dialog_fastlogin_login"
        android:textColor="@color/dialog_schedule_btn_color"
        android:textSize="@dimen/dialog_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="60dp" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".3"
            android:background="@color/text_color_72" />

        <TextView
            android:id="@+id/left_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="其他方式登录"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_26px" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".3"
            android:background="@color/text_color_72" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <!-- 微信登陆 -->

        <TextView
            android:id="@+id/third_fastlogin_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/wff_weixin"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="@dimen/dialog_text_size" />
        <!-- QQ登陆 -->

        <TextView
            android:id="@+id/third_fastlogin_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/wff_qq"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="@dimen/dialog_text_size" />
        <!-- 新浪登陆 -->

        <TextView
            android:id="@+id/third_fastlogin_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/wff_weibo"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="@dimen/dialog_text_size" />
    </LinearLayout>

</LinearLayout>