<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_f3"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include
            android:id="@+id/title"
            layout="@layout/activity_top_layout"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/wff_person_center"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_title_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <ImageButton
                    android:id="@+id/personal_title_left"
                    android:layout_width="@dimen/activity_title_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/select_title_button"
                    android:src="@drawable/sh_icon_return_also" />

                <LinearLayout
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/title_number_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/sh_icon_my_info" />

                    <TextView
                        android:id="@+id/title_number"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_personal_center"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:src="@drawable/wff_icon_message"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/personal_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="@string/personal_name_text"
                    android:textColor="@color/text_color_ff"
                    android:textSize="@dimen/text_size_30px" />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/wff_icon_shezhi"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:src="@drawable/wff_icon_message" />
            </LinearLayout>

            <TextView
                android:id="@+id/top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="13dp"
                android:text="欢迎来到文化云"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_36px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="13dp"
                android:text="地址"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_26px" />

            <ImageView
                android:id="@+id/login_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp" />

            <com.sun3d.culturalShanghai.view.CircleImageView
                android:id="@+id/title_left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/sh_icon_personal_n"
                android:visibility="gone" />

            <TextView
                android:id="@+id/personal_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_admin_top"
                android:text="@string/personal_admin_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/text_color_ff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_order"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".3"
                android:drawableTop="@drawable/my_order_new"
                android:gravity="center"
                android:text="我的订单"
                android:textColor="@color/text_color_26"
                android:textSize="@dimen/text_size_30px" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/text_color_df" />

            <TextView
                android:id="@+id/my_collection"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".3"
                android:drawableTop="@drawable/my_collection_new"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="@color/text_color_26"
                android:textSize="@dimen/text_size_30px" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/text_color_df" />

            <TextView
                android:id="@+id/my_comment"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".3"
                android:drawableTop="@drawable/my_comment_new"
                android:gravity="center"
                android:text="我的评论"
                android:textColor="@color/text_color_26"
                android:textSize="@dimen/text_size_30px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/personal_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:divider="@color/text_color_f3"
                android:dividerHeight="1dp"
                android:scrollbars="none" >
            </ListView>

            <include
                android:id="@+id/loading"
                layout="@layout/pageloading_layout"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>