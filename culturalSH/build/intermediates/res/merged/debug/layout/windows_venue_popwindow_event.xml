<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/region_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/text_color_ff"
        android:dividerHeight="0dp"
        android:visibility="gone" >
    </ListView>

    <LinearLayout
        android:id="@+id/classition_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_item_height"
        android:background="@color/text_color_ff" >

        <TextView
            android:id="@+id/classition_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/window_item_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/home_myborder"
            android:gravity="center"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:text="全部"
            android:textColor="@color/text_color_7c"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

    <GridView
        android:id="@+id/classification_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_ff"
        android:horizontalSpacing="14dp"
        android:listSelector="@drawable/select_search_item_bg"
        android:numColumns="4"
        android:padding="15dp"
        android:scrollbars="none"
        android:verticalSpacing="15dp" >
    </GridView>

    <ListView
        android:id="@+id/sort_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_ff"
        android:divider="@color/text_color_df"
        android:dividerHeight="1dp" >
    </ListView>

    <ListView
        android:id="@+id/status_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_ff"
        android:divider="@color/text_color_df"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>