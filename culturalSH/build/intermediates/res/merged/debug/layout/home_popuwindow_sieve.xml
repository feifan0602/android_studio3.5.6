<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_popuwindow_26_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/close_ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_new_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/text_color_e1"
            android:textSize="@dimen/window_item_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_ff" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000" >
        </ListView>
    </LinearLayout>

</LinearLayout>