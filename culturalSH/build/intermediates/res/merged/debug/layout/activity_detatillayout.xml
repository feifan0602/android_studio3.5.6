<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_detail_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_ff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_ff"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_detail_Only_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:text="活动详情"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/text_size_32px" />

            <LinearLayout
                android:id="@+id/title_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="活动详情"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_32px" />

                <ImageView
                    android:id="@+id/left_line_img"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:background="@color/text_color_72"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:background="@color/text_color_df" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="活动单位"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_32px" />

                <ImageView
                    android:id="@+id/right_line_img"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:background="@color/text_color_72"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp" >

            <ImageView
                android:id="@+id/line_img_bottom"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/text_color_72" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom=".5dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@color/text_color_cc" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/myProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="2dp" />

    <WebView
        android:id="@+id/activity_dateils"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/height_change"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:padding="5dp"
        android:src="@drawable/arrow_down"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp" />

</LinearLayout>