<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menban" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/top_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/item_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/padding_10dp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:background="@drawable/home_label_style"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="主题"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22px" />

            <TextView
                android:id="@+id/item_subject1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_subject"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_toRightOf="@+id/item_subject"
                android:background="@drawable/home_label_style"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="主题"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22px" />

            <TextView
                android:id="@+id/item_subject2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_subject1"
                android:layout_alignBottom="@+id/item_subject1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_subject1"
                android:background="@drawable/home_label_style"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="主题"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22px" />

            <TextView
                android:id="@+id/buttom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_label_price_style"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="价格"
                android:textColor="@color/text_color_ff"
                android:textSize="@dimen/text_size_30px" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/padding_5dp"
        android:singleLine="true"
        android:text="名称。。。。"
        android:textColor="@color/text_color_26"
        android:textSize="@dimen/text_size_34px" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/padding_5dp"
        android:singleLine="true"
        android:text="地址。。。。  "
        android:textColor="@color/text_color_80"
        android:textSize="@dimen/text_size_26px" />

</LinearLayout>