<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_ff"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/total_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_color_ff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/text_color_f3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:gravity="center"
                    android:text="上海"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_28px"/>

                <TextView
                    android:id="@+id/gps_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="GPS定位"
                    android:textColor="@color/text_color_7c"
                    android:textSize="@dimen/text_size_26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_ff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="—— 快速选择 ——"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_30px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <GridView
                    android:id="@+id/city_item_gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="12dp"
                    android:numColumns="5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:verticalSpacing="12dp"></GridView>
            </LinearLayout>

            <TextView
                android:id="@+id/all_address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/text_color_f3"
                android:gravity="center"
                android:text="—— 全部地区 ——"
                android:textColor="@color/text_color_26"
                android:textSize="@dimen/text_size_28px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_color_ff"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/text_color_e2"
                    android:dividerHeight="0.5dp"
                    android:paddingLeft="10dp"></ListView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>