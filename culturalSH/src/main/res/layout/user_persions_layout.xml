<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/white_color" >

    <ImageView
        android:id="@+id/personal_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/sh_icon_user_head" />

    <TextView
        android:id="@+id/personal_name"
        style="@style/event_dateils_item_left_text"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/personal_info"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/personal_head"
        android:text="helen" />

    <TextView
        android:id="@+id/personal_info"
        style="@style/event_dateils_item_left_text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:text="男   80后"
        android:textColor="@color/blue_wathet_color" />

</RelativeLayout>