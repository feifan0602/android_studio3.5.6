<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_rect"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <com.sun3d.culturalShanghai.view.RoundImageView
            android:id="@+id/comment_head"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/sh_icon_comment_icon" />

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comment_head"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/personal_name_text"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/personal_time_text"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/event_dateils"
        android:textColor="@color/app_text_color" />

    <LinearLayout
        android:id="@+id/comment_img_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <com.sun3d.culturalShanghai.view.PhotoView
            android:id="@+id/comment_imgleft"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <com.sun3d.culturalShanghai.view.PhotoView
            android:id="@+id/comment_imgcenter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <com.sun3d.culturalShanghai.view.PhotoView
            android:id="@+id/comment_imgright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>