<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/host_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_ff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/text_color_df" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activityHost_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:text="活动单位"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_32px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_df" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activityHost1"
            android:layout_width="@dimen/hostlayout_width"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:text="主   办   方 :"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/activityHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activityOrganizer1"
            android:layout_width="@dimen/hostlayout_width"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:text="承 办 单 位 :"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/activityOrganizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activityCoorganizer1"
            android:layout_width="@dimen/hostlayout_width"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:text="协 办 单 位 :"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/activityCoorganizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_performed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activityPerformed1"
            android:layout_width="@dimen/hostlayout_width"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:text="演 出 单 位 :"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activityPerformed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_ff"
                android:gravity="center_vertical|left"
                android:paddingBottom="@dimen/bottom_margin"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/top_margin"
                android:text="测试看看看啊看看看看"
                android:textColor="@color/text_color_69"
                android:textSize="@dimen/text_size_28px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/subItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/activity_host_subitem"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="测试"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_24px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/subItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/activity_host_subitem"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="测试"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_24px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/subItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_host_subitem"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="测试"
                    android:textColor="@color/text_color_26"
                    android:textSize="@dimen/text_size_24px"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrowimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activitySpeaker1"
            android:layout_width="@dimen/hostlayout_width"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:text="主   讲   人 :"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/activitySpeaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_ff"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/bottom_margin"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/top_margin"
            android:textColor="@color/text_color_26"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>

</LinearLayout>