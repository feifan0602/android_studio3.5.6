<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/title"
        layout="@layout/activity_title" />
    
    <RelativeLayout
        android:id="@+id/user_bind_weibo"
        android:layout_marginTop="15dp"
        style="@style/user_item" >

        <TextView
            style="@style/user_item_left_text"
            android:drawableLeft="@drawable/sh_icon_bind_weibo"
            android:drawablePadding="15dp"
            android:text="@string/bind_weibo" />
        
        <TextView
            android:id="@+id/bind_weibo_whether"
            style="@style/user_item_right_text"
            android:text="@string/bind_no"/>

    </RelativeLayout>
    
    <View style="@style/personal_line_style" />
    
    <RelativeLayout
        android:id="@+id/user_bind_weixin"
        style="@style/user_item" >

        <TextView
            style="@style/user_item_left_text"
            android:drawableLeft="@drawable/sh_icon_bind_weixin"
            android:drawablePadding="15dp"
            android:text="@string/bind_weixin" />
        
        <TextView
            android:id="@+id/bind_weixin_whether"
            style="@style/user_item_right_text"
            android:text="@string/bind_no"/>

    </RelativeLayout>
    
    <View style="@style/personal_line_style" />
    
    <RelativeLayout
        android:id="@+id/user_bind_qq"
        style="@style/user_item" >

        <TextView
            style="@style/user_item_left_text"
            android:drawableLeft="@drawable/sh_icon_bind_qq"
            android:drawablePadding="15dp"
            android:text="@string/bind_qq" />
        
        <TextView
            android:id="@+id/bind_qq_whether"
            style="@style/user_item_right_text"
            android:text="@string/bind_no"/>

    </RelativeLayout>
    
    <View style="@style/line_small_style" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="7dp"
        android:textColor="@color/event_text_color"
        android:textSize="@dimen/text_size"
        android:text="@string/bing_introduction"
        />
    

</LinearLayout>
