<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_grid_image_size" >

        <com.sun3d.culturalShanghai.view.RoundImageView
            android:id="@+id/main_grid_content"
            android:layout_width="@dimen/main_grid_image_size"
            android:layout_height="@dimen/main_grid_image_size"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/main_grid_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/main_grid_content"
            android:background="@drawable/sh_icon_grid_update_n" />

        <ImageView
            android:id="@+id/main_grid_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/main_grid_content"
            android:background="@drawable/sh_icon_grid_recently_n" />
    </RelativeLayout>

    <TextView
        android:id="@+id/main_grid_text"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/title_color"
        android:textSize="@dimen/main_text_size"
        android:background="@drawable/shape_main_grid_item"
        android:text="@string/main_grid_text" />

</LinearLayout>