<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/itemlayoutid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wff_gray_rect" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="75dp" >

                <ImageView
                    android:id="@+id/iv_adapter_video_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/sh_icon_error_loading"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_video_playicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/video_item_play_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/play_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="2016上海跨年荧光派对巴西DJ全球巡演"
                android:textColor="@color/text_color_26"
                android:textSize="@dimen/text_size_24px" />

            <TextView
                android:id="@+id/play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/sh_icon_play_small"
                android:drawablePadding="4dp"
                android:text="22万次播放"
                android:textColor="@color/loading_text_color"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>