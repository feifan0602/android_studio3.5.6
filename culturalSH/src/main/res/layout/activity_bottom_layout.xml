<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_bottom"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:background="@color/bottom_background"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="5" >

    <LinearLayout
        android:id="@+id/bottom_home_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_home_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_activity_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_activity_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_activity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nearby_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/bottom_nearby_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_nearby_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_calender_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/bottom_calender_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_calender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日历"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_venue_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_venue_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_venue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空间"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_community_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_community_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_community_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_my_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_my_iv"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/bottom_my_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/text_size_22px" />
    </LinearLayout>

</LinearLayout>