<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color" >

    <include
        android:id="@+id/title"
        layout="@layout/activity_top_iv_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/user_line_color" />

        <RelativeLayout
            android:id="@+id/user_head_icon_layout"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp" >

            <RelativeLayout
                android:id="@+id/user_nick_alter"
                style="@style/user_item"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <com.sun3d.culturalShanghai.view.CircleImageView
                        android:id="@+id/user_head_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <TextView
                        android:id="@+id/user_item_name_alter"
                        style="@style/user_item_right_text" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/left_tv0"
                style="@style/user_item_left_text"
                android:paddingRight="10dp"
                android:text="@string/user_item_head" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/user_item"
            android:visibility="gone" >

            <TextView
                android:id="@+id/user_item_account_tv"
                style="@style/user_item_left_text"
                android:paddingRight="10dp"
                android:text="@string/user_name_text" />

            <TextView
                android:id="@+id/user_item_account"
                style="@style/user_item_right_text"
                android:drawableRight="@drawable/sh_icon_null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_nick"
            style="@style/user_item" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
               android:id="@+id/left_tv1"
                style="@style/user_item_left_text"
                android:paddingRight="10dp"
                android:text="@string/user_nick_text" />

            <TextView
                android:id="@+id/user_item_name"
                style="@style/user_item_right_text"
                android:layout_width="fill_parent"
                android:layout_toRightOf="@id/left_tv1"
                android:gravity="center_vertical|right"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_sex"
            style="@style/user_item" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv2"
                style="@style/user_item_left_text"
                android:text="@string/user_sex_text" />

            <TextView
                android:id="@+id/user_item_sex"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_bind_email"
            style="@style/user_item"
            android:visibility="visible" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv3"
                style="@style/user_item_left_text"
                android:text="@string/user_bind_phone_text" />

            <TextView
                android:id="@+id/user_item_bind_email"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_region"
            style="@style/user_item" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv4"
                style="@style/user_item_left_text"
                android:text="@string/user_region_text" />

            <TextView
                android:id="@+id/user_item_region"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_weixin_bind"
            style="@style/user_item"
            android:layout_marginTop="15dp"
            android:visibility="gone" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                style="@style/user_item_left_text"
                android:text="@string/user_weixin_bind" />

            <TextView
                android:id="@+id/user_weixin_tv"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_weibo_bind"
            style="@style/user_item"
            android:visibility="gone" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                style="@style/user_item_left_text"
                android:text="@string/user_weibo_bind" />

            <TextView
                android:id="@+id/user_item_tv"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_eliminate"
            style="@style/user_item"
            android:layout_marginTop="15dp"
            android:visibility="visible" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv5"
                style="@style/user_item_left_text"
                android:text="@string/user_eliminate_text" />

            <TextView
                android:id="@+id/user_center_size"
                style="@style/user_item_right_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_update_pw"
            style="@style/user_item"
            android:visibility="visible" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv6"
                style="@style/user_item_left_text"
                android:text="@string/user_update_pw_text" />

            <TextView
                android:id="@+id/user_item_right_text"
                style="@style/user_item_right_text"
                android:text="@string/user_update_pwm_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_return_login"
            style="@style/user_item"
            android:visibility="visible" >

            <View
                style="@style/personal_line_ztp_style"
                android:layout_alignParentTop="true" />

            <TextView
                 android:id="@+id/left_tv7"
                style="@style/user_item_left_text"
                android:text="@string/setting_exit" />

            <TextView
                android:id="@+id/right_tv0"
                style="@style/user_item_right_text"
                android:text="@string/user_return_login_text" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/loading"
        
        layout="@layout/pageloading_layout"
        android:visibility="gone" />

    <!-- android:layout_below="@+id/title" -->
    
</RelativeLayout>