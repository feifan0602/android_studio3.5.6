<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/personality_return"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/sh_icon_personal_return" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="@string/dialog_personality_title"
        android:textColor="@color/dialog_title_color"
        android:textSize="@dimen/dialog_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_white_rect"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp" >

            <RadioGroup
                android:id="@+id/person_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/personrbtn_1"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_50" />

                <RadioButton
                    android:id="@+id/personrbtn_2"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_60" />

                <RadioButton
                    android:id="@+id/personrbtn_3"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_70" />

                <RadioButton
                    android:id="@+id/personrbtn_4"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_80" />

                <RadioButton
                    android:id="@+id/personrbtn_5"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_90" />

                <RadioButton
                    android:id="@+id/personrbtn_6"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_00" />

                <RadioButton
                    android:id="@+id/personrbtn_7"
                    style="@style/brithday_radio_style1"
                    android:text="@string/dialog_birthday_10" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/personal_item_line_color" />

        <RadioGroup
            android:id="@+id/person_radiogroup_sex"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/personrbtn_man"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/dialog_personality_man"
                android:textColor="@color/dialog_content_color" 
                android:background="@drawable/select_setting_org_left"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/personal_item_line_color" />

            <RadioButton
                android:id="@+id/personrbtn_woman"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/select_setting_org_right"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/dialog_personality_woman"
                android:textColor="@color/dialog_content_color" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>